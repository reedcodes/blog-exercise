{%- from "post-meta.njk" import postMeta with context -%}

{%- macro postList(collection) -%}

<ul>
{%- for post in collection | reverse %}
	<li>
		{{- postMeta(
				image = post.data.image,
				title = post.data.title,
				date = post.data.date,
				link = post.url
		) -}}
	</li>
{%- endfor -%}
</ul>

{%- endmacro -%}
