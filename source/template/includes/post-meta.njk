{%- macro postMeta() -%}

	<figure>
		<img alt="{{- image.alt -}}" src="{{- image.source -}}">
		<figcaption><a href="{{- image.link -}}">Photo credit {{ image.credit -}}</a></figcaption>
	</figure>

	<h1>{{- title -}}</h1>
	<p>{{- date | date -}}</p>

	{%- if tags -%}
		<ul>
			{%- for tag in tags -%}
				{%- if tag != 'posts' -%}<li>{{- tag -}}</li>{%- endif -%}
			{%- endfor -%}
		</ul>
	{%- endif -%}

{%- endmacro -%}
