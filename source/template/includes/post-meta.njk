{%- macro postMeta() -%}

	<figure>
		<img alt="{{- image.alt -}}" src="{{- image.source -}}">
		<figcaption><a href="{{- image.link -}}">Photo credit {{ image.credit -}}</a></figcaption>
	</figure>

	<h1>{{- title -}}</h1>
	<p>{{- date | date -}}</p>

	{%- if category -%}
		<dl>
			<dt>Category:</dt>
			<dd>{{- category -}}</dd>
		</dl>
	{%- endif -%}

	{%- if tags -%}
		<dl>
			<dt>Tags:</dt>
			{%- for tag in tags -%}
				{%- if tag != 'posts' -%}<dd>{{- tag -}}</dd>{%- endif -%}
			{%- endfor -%}
		</dl>
	{%- endif -%}

{%- endmacro -%}
