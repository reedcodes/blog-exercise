{%- macro taxonomy(collection, type) -%}

<ul class="{{- type -}}-list" role="list">
{%- for taxonomy in collection %}
	{%- if taxonomy != 'pages' and taxonomy != 'posts' %}
		<li>
			<a href="/blog/{{- type -}}/{{- taxonomy | slug -}}/">{{- taxonomy -}}</a>
		</li>
	{%- endif -%}
{%- endfor -%}
</ul>

{%- endmacro -%}
